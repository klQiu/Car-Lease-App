<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginBottom="20dp"
    android:padding="10dp"
    app:cardCornerRadius="5sp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/car_year_txt"
            style="@style/PostItemTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:text="year: " />

        <TextView
            android:id="@+id/car_mileage_txt"
            style="@style/PostItemTextStyle"
            android:layout_width="wrap_content"
            android:layout_below="@+id/car_year_txt"
            android:layout_height="wrap_content"
            android:text="mileage: " />

        <TextView
            android:id="@+id/car_postTime_txt"
            style="@style/PostItemTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_mileage_txt"
            android:text="time posted: " />


        <TextView
            android:id="@+id/car_location_txt"
            style="@style/PostItemTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_postTime_txt"
            android:text="location: " />

        <TextView
            android:id="@+id/car_telephone_txt"
            style="@style/PostItemTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="owner phone: "
            android:layout_alignBaseline="@+id/car_telephone"
            android:layout_alignBottom="@+id/car_telephone"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/car_email_txt"
            style="@style/PostItemTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="owner email: "
            android:layout_alignBaseline="@+id/car_email"
            android:layout_alignBottom="@+id/car_email"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/car_year"
            style="@style/PostItemTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/car_telephone_txt"
            android:text="1997" />

        <TextView
            android:id="@+id/car_mileage"
            style="@style/PostItemTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_year"
            android:layout_alignStart="@+id/car_year"
            android:text="20000" />


        <TextView
            android:id="@+id/car_postTime"
            style="@style/PostItemTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_mileage"
            android:layout_alignStart="@+id/car_year"
            android:text="" />

        <TextView
            android:id="@+id/car_location"
            style="@style/PostItemTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_postTime"
            android:layout_alignStart="@+id/car_year"
            android:text="" />

        <TextView
            android:id="@+id/car_telephone"
            style="@style/PostItemTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_location"
            android:layout_alignStart="@+id/car_year"
            android:text="" />

        <TextView
            android:id="@+id/car_email"
            style="@style/PostItemTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_telephone"
            android:layout_alignStart="@+id/car_year"
            android:text="abc@gmail.com" />

    </RelativeLayout>


</android.support.v7.widget.CardView>