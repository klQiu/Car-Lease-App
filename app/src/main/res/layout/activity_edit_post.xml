<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.elvis.carleaseapp.PostFormActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/UpdateTitleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <fragment
                android:id="@+id/UpdateTitle"
                android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!--<EditText-->
            <!--android:id="@+id/UpdateTitle"-->
            <!--android:layout_width="250dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="0.25"-->
            <!--android:ems="10"-->
            <!--android:hint="Please enter your car name"-->
            <!--android:inputType="textPersonName"-->
            <!--android:maxLength="25" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/UpdateYearView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.12"
                android:text="Year"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/UpdateYear"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.72"
                android:ems="10"
                android:hint="Please enter years that the car is bought"
                android:inputType="numberDecimal"
                android:maxLength="4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/UpdateBrandView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.12"
                android:text="Brand"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/UpdateBrand"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.72"
                android:ems="10"
                android:hint="Please enter the brand"
                android:inputType="textPersonName"
                android:maxLength="15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/UpdateColourView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.12"
                android:text="Colour"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/UpdateColour"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.72"
                android:ems="10"
                android:hint="Please enter the colour"
                android:inputType="textPersonName"
                android:maxLength="20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/UpdateMileageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.12"
                android:text="Mileage"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/UpdateMileage"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.72"
                android:ems="10"
                android:hint="Please enter the mileage of your car"
                android:inputType="numberDecimal"
                android:maxLength="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/UpdatePriceView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.12"
                android:text="Price"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/UpdatePrice"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.72"
                android:ems="10"
                android:hint="Please enter the price per month"
                android:inputType="numberDecimal"
                android:maxLength="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/UpdaterentTimeView"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:text="RentTime"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/Updatespinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/UpdateEmailView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.12"
                android:text="Email"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/UpdateEmail"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.72"
                android:ems="10"
                android:hint="Please enter the contact's email"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/UpdateTelephoneView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telephone"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/UpdateTelephone"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.72"
                android:ems="10"
                android:hint="Please enter the contact's telephone number"
                android:inputType="numberDecimal"
                android:maxLength="20" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/Updateloadimage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="selectFromGallery"
                android:text="Change Image" />

            <ImageView
                android:id="@+id/Updatecar_image"
                android:layout_width="fill_parent"
                android:layout_height="200dp" />
        </LinearLayout>


        <Button
            android:id="@+id/Update_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom|right"
            android:text="Update" />

        <Button
            android:id="@+id/Delete_button"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom|right"
            android:layout_weight="0.44"
            android:text="Delete  Post" />


    </LinearLayout>

</ScrollView>
